import sys

Import("environment")

if sys.platform.startswith("haiku"):
    athena_audio = environment.SharedLibrary("athena_audio", ["audio_haiku.cpp"], LIBS = ["be", "game"])
else:
    athena_audio = environment.SharedLibrary("athena_audio", ["audio_openal.c"], LIBS = ["openal"])

Return("athena_audio")
