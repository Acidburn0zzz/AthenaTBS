import os

Import("environment turbojson")

s_env = environment.Clone()

platform = SConscript(dirs = ["platform"], exports = ["environment"])

athena_libs = [platform, "png", turbojson, "m"]

libathena = environment.StaticLibrary("athena", 
    [
        "game.c", "ai.c", "unit.c", "tile.c", "tileset.c", "spriteset.c", "field.c", "collision.c", "player.c",
        "animation.c", "image.c", "load_png.c", "load_tga.c", "window_style.c", "container.c", "font.c", "viewport.c",
        "turbo_json_helpers.c", "button.c", "menu.h", "unit_classes.c",
        "server_thread.c", "ui_thread.c"
    ],
    LIBS = athena_libs, CPPDEFINES = ["EMBED_CYNICAL"])

athena_libs = [libathena] + athena_libs

athena = environment.Program("athena", ["athena.c"], LIBS = athena_libs)
athena_test = environment.Program("athena_test", ["athena_test.c"], LIBS = athena_libs)
athena_image_test = environment.Program("athena_image_test", ["athena_image_test.c"], LIBS = athena_libs)
athena_camera_test = environment.Program("athena_camera_test", ["athena_camera_test.c"], LIBS = athena_libs)
athena_unit_test = environment.Program("athena_unit_test", ["athena_unit_test.c"], LIBS = athena_libs)


environment = s_env.Clone()

Return("athena")
